<body class="index-body">

<section class="login-sec">
    <div class="logo-box">
        <img src="assets/images/the-art-logo.png" class="color-logo" alt="The Art W Logo">
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="login-form-box">
                     <form id="login_form" action="/verify_tfa" method="POST">
                      <h2>OTP</h2>
                      <h6>Please enter the OTP to verify your transaction.</h6>
                      <p>An One Time Password sent to your e-mail address.</p>
                      <%if(err_msg!=""){%>
                        <div class="alert alert-danger"><%=err_msg%></div>
                      <%} if(success_msg!=""){%>
                        <div class="alert alert-success"><%=success_msg%></div>
                      <%}%>
                        <!-- <h2>Login</h2> -->
                          <div class="form-group">
                            <!-- <label>Password</label> -->
                            <input type="text" class="form-control" placeholder="Enter OTP" name='otp' id='otp' data-rule-required="true"  data-msg-required="Please enter OTP.">
                          </div>

                          <div>
                            <!-- <a class="purple-btn-index" href="/login">Login</a> -->
                            <button type="submit" class="purple-btn-index" id="submit_verify_account">Submit</button>
                          </div>
                        </form>
                </div>
            </div>
        </div>
    </div>
</section>



	<!-- JQuery -->
        <script type="text/javascript" src="assets/js/jquery-3.3.1.min.js"></script>
        <!-- <script type="text/javascript" src="assets/js/jquery-1.11.3.min.js"></script> -->
        <!-- Bootstrap Core JavaScript -->
        <script type="text/javascript" src="assets/js/bootstrap.min.js"></script>
        <!-- dropdownhover effects JavaScript -->
        <script type="text/javascript" src="assets/js/bootstrap-dropdownhover.min.js"></script>
        <!-- wow JavaScript -->
        <script type="text/javascript" src="assets/js/wow.min.js"></script>
        <!-- slick JavaScript -->
        <script type="text/javascript" src="assets/js/slick.js"></script>
         <script type="text/javascript" src="assets/js/slick.min.js"></script>

        <!-- Custom JavaScript -->
        <script type="text/javascript" src="assets/js/custom.js"></script>
        <script src="/assets/js/jquery.validate.min.js"></script>
        <script type="text/javascript">
        $('#login_form').validate({
              onfocusout: function(element) {
              this.element(element);
              },
              errorClass: 'error_validate',
              errorElement:'span',
              highlight: function(element, errorClass) {
              $(element).removeClass(errorClass);
              },
              submitHandler:function(form)
                 {
                   $('#submit_verify_account').attr('disabled',true);
                   form.submit();
                 }
              });
              $(document).ready(function () {
                var flash_msg=$('.flash_msg').html();
                if(flash_msg!="" && flash_msg!=undefined)
                {
                  setTimeout(function(){ $('.flash_msg').html('');},4000);
                }    
              });

              $(document).ready(function () {
                var succ_flash_msg=$('.succ_flash_msg').html();
                if(succ_flash_msg!="" && succ_flash_msg!=undefined)
                {
                  setTimeout(function(){ $('.succ_flash_msg').html('');},4000);
                }    
              });    
        </script>
        
    </body>
</html>



 
